# Server Configuration
PORT=3333
NODE_ENV=development

# Polygon.io API Configuration
# Get your API key from: https://polygon.io/dashboard/api-keys
POLYGON_API_KEY=your_polygon_api_key_here

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=3600

# MongoDB Configuration (optional - for data storage)
MONGODB_URI=mongodb://127.0.0.1:27017/trading-master

# PostgreSQL Configuration (for ticker data storage)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_master
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# JWT Authentication Configuration
# IMPORTANT: Change JWT_SECRET to a strong, random string in production!
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Worker Configuration
WORKER=false

FRONTEND_BUCKET=frontend/dist