    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3333",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
